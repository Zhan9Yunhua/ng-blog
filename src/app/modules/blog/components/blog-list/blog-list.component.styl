@import 'index.styl'
ul
  padding 0
li
  list-style none
.li
  min-height 270px
  padding 20px
  &:hover
    border-radius 6px
    boxShadowRoboto-l()
  &-l
    width 41.66666667%
    margin 0 15px
    float left
    &-img
      width 100%
      height 60%
      overflow hidden
      border-radius 4px
      padding-bottom 56%
      position relative
      boxShadowRoboto-l()
      img
        width 100%
        height 100%
        transition 1s ease-out
        position absolute
        top 0
        left 0
        &:hover
          opacity 0.75
          transform scale(1.1)
  &-r
    width 58.33333333%
    padding 0 15px
    margin-left 44.444%
    a
      color $fontColor
      text-decoration none
      word-wrap break-word
    p
      color #999
      margin-bottom 10px
    time
      color #3C4858
.mat-list-item
  height auto
.mat-divider
  width 40%
  margin 40px auto 60px
.progress
  margin 0 auto
@media (max-width: 500px)
  .li
    display block
    padding 20px 30px
    &:hover
      boxShadowRoboto-l(true)
    &-l
      width 100%
      margin 0 auto
      &-img
        margin 0 auto 20px
    &-r
      overflow hidden
      width 100%
      margin 0 auto
  .mat-divider
    margin 20px auto 40px
