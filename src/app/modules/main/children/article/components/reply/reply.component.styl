@import 'libs/var.styl'
:host(app-reply)
  .reply
    margin-top 80px
    .title
      color $titleColor
      font-size 28px
      margin-bottom 30px
      text-align center
  .form
    margin 0 auto
    padding 0 10px
    display flex
    flex-direction column
    &-row
      display flex
      justify-content space-between
      .input
        width 40%
    &-submit
      text-align right
  @media (max-width: 576px)
    .form
      max-width 450px
      &-row
        flex-direction column
        .input
          width 100%
  @media (max-width: 576px)
    .form
      max-width 450px
  @media (min-width: 768px)
    .form
      max-width 600px
