@import 'index.styl'
:host(app-blog-list)
  .li
    display flex
    padding 20px
    &:hover
      border-radius 4px
      boxShadowRoboto-l()
    &-l
      width 41.66666667%
      margin 0 15px
      &-img
        overflow hidden
        border-radius 3px
        boxShadowRoboto-l()
        img
          width 100%
          height 100%
          transition 1s ease-out
          vertical-align middle
          &:hover
            opacity 0.75
            transform scale(1.1)
    &-r
      width 58.33333333%
      padding 0 15px
      a
        color $fontColor
        text-decoration none
        word-wrap break-word
      p
        color #999
        margin-bottom 10px
      time
        color #3C4858
  .mat-list-item
    height auto
  .mat-divider
    width 40%
    margin 40px auto 60px
  @media (max-width: 500px)
    .li
      display block
      &-l
        width 100%
        margin 0 auto
        &-img
          margin-bottom 20px
      &right
        width 100%
        margin 0 auto
    .mat-divider
      margin 20px auto 40px
