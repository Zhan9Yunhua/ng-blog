:host(app-main)
  .main
    margin -60px 30px 0
    border-radius 4px
    box-shadow 0 16px 24px 2px rgba(0, 0, 0, 0.14), 0 6px 30px 5px rgba(0, 0, 0, 0.12), 0 8px 10px -5px rgba(0, 0, 0, 0.2)
    background #fff
    position relative
    z-index 3
  @media (max-width: 768px)
    .main
      margin 0
      border-radius 0
      box-shadow none
  @media (min-width: 768px) and (max-width: 1200px)
    .main
      margin-left 15px
      margin-right 15px