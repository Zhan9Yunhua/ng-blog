@import 'libs/var.styl'
:host(app-footer)
  footer
    display flex
    justify-content space-between
    padding 15px 20px
    margin 0 auto
    font-weight 300
    ul
      display flex
      li
        padding 15px
        font-weight 500
        text-transform uppercase
        font-size 12px
    a
      color $fontColor
      text-decoration none
    .footer-right
      // padding 15px 0
      font-size 14px
  @media (min-width: 768px)
    footer
      max-width 720px
  @media (min-width: 992px)
    footer
      max-width 960px
  @media (min-width: 1200px)
    footer
      max-width 1140px
  @media (max-width: 768px)
    footer
      justify-content center
      padding 30px 0 26px
      background-color #323437
      .footer-left
        display none
      .footer-right
        color #999
        a
          color #eee
