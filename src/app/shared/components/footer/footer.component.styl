:host(app-footer)
  footer
    display flex
    justify-content space-between
    padding 15px 0
    margin 0 auto
    font-weight 300
    ul
      display flex
      li
        padding 15px
        font-weight 500
        text-transform uppercase
        font-size 12px
    a
      text-decoration none
    .footer-right
      padding 15px 0
      font-size 14px
  @media (max-width: 576px)
    footer
      justify-content center
      .footer-left
        display none
  @media (min-width: 576px)
    footer
      max-width 540px
  @media (min-width: 768px)
    footer
      max-width 720px
  @media (min-width: 992px)
    footer
      max-width 960px
  @media (min-width: 1200px)
    footer
      max-width 1140px
