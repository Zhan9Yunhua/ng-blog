@import '../../../styles/index.styl'
:host(app-search-bar)
  position relative
  .search
    position absolute
    right 0
    &-top
      color #fff
      ::ng-deep .mat-form-field-underline
        background-color #fff
    &-mobile
      display flex
      align-items center
      margin 10px 0
      ::ng-deep .mat-form-field-underline
        display none
  .btn
    &-top
      color #fff
    &-mobile
      color $fontColor
